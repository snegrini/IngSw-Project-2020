<?xml version="1.0" encoding="UTF-8"?>
<gods>
    <god>
        <name>Apollo</name>
        <caption>God of Music</caption>
        <description>Your Move: Your Worker may move into an opponent Worker's space by forcing their Worker to the
            space yours just vacated.
        </description>
        <effects>
            <effect phase="YOUR_MOVE">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_WORKER</target>
                    <move over="true" swapspace="true"/>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Artemis</name>
        <caption>Goddess of the Hunt</caption>
        <description>Your Move: Your Worker may move one additional time, but not back to its initial space.
        </description>
        <effects>
            <effect phase="YOUR_MOVE_AFTER">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_ACTIVE_WORKER</target>
                    <move again="true" quantity="1" goback="false"/>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Athena</name>
        <caption>Goddess of Wisdom</caption>
        <description>Opponent's turn: If one of your Workers moved up on your last turn, opponent Workers cannot move up
            this turn.
        </description>
        <effects>
            <effect phase="YOUR_MOVE_AFTER">
                <requirements>
                    <userconfirm>false</userconfirm>
                    <move>UP</move>
                </requirements>
                <parameters>
                    <target>ALL_OPP_WORKERS</target>
                    <move lock="true">UP</move>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Atlas</name>
        <caption>Titan Shouldering the Heavens</caption>
        <description>Your Build: Your Worker may build a dome at any level.</description>
        <effects>
            <effect phase="YOUR_BUILD">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_WORKER</target>
                    <build forcedome="true"/>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Demeter</name>
        <caption>Goddess of the Harvest</caption>
        <description>Your Build: Your Worker may build one additional time, but not on the same space.</description>
        <effects>
            <effect phase="YOUR_BUILD_AFTER">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_ACTIVE_WORKER</target>
                    <build again="true" quantity="1" samespace="false"/>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Hephaestus</name>
        <caption>God of Blacksmiths</caption>
        <description>Your Build: Your Worker may build one additional block (not dome) on top of your first block.
        </description>
        <effects>
            <effect phase="YOUR_BUILD_AFTER">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_ACTIVE_WORKER</target>
                    <build again="true" quantity="1" forcesamespace="true" dome="false"/>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Minotaur</name>
        <caption>Bull-headed Monster</caption>
        <description>Your Move: Your Worker may move into an opponent Worker's space, if their Worker can be forced
            one space straight backwards to an unoccupied space at any level.
        </description>
        <effects>
            <effect phase="YOUR_MOVE">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_WORKER</target>
                    <move over="true" pushback="true"/>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Pan</name>
        <caption>God of the Wild</caption>
        <description>Win Condition: You also win if your Worker moves down two or more levels.</description>
        <effects>
            <effect phase="YOUR_MOVE_AFTER">
                <requirements>
                    <userconfirm>false</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_WORKER</target>
                    <move win="true" lvl="2">DOWN</move>
                </parameters>
            </effect>
        </effects>
    </god>
    <god>
        <name>Prometheus</name>
        <caption>Titan Benefactor of Mankind</caption>
        <description>Your Turn: If your Worker does not move up, it may build both before and after moving.
        </description>
        <effects>
            <effect phase="YOUR_MOVE">
                <requirements>
                    <userconfirm>true</userconfirm>
                </requirements>
                <parameters>
                    <target>YOUR_WORKER</target>
                    <build again="true" quantity="1"/>
                </parameters>
            </effect>
        </effects>
    </god>
</gods>