<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="confirmBtn" defaultButton="true" mnemonicParsing="false" text="Ready"/>
                <Button fx:id="mainMenuBtn" cancelButton="true" mnemonicParsing="false" text="Back To Menu"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="145.0" prefWidth="275.0"
              spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="welcomeLbl" text="Label"/>
                <Separator prefHeight="0.0" prefWidth="275.0"/>
                <Label text="Choose the player number for the match:"/>
                <RadioButton fx:id="radioBtn1" mnemonicParsing="false" selected="true" text="RadioButton">
                    <toggleGroup>
                        <ToggleGroup fx:id="toggleGroup"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="radioBtn2" mnemonicParsing="false" text="RadioButton" toggleGroup="$toggleGroup"/>
            </children>
        </VBox>
    </center>
</BorderPane>
