<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" styleClass="rootPane" stylesheets="@../css/connect_scene.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.view.gui.scene.ConnectSceneController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="connectBtn" defaultButton="true" mnemonicParsing="false" text="Connect"/>
            <Button fx:id="backBtn" cancelButton="true" mnemonicParsing="false" text="Back"/>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="145.0" prefWidth="275.0"
            spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="JOIN A SERVER"/>
            <Separator prefHeight="0.0" prefWidth="275.0"/>
            <Label text="Server address:"/>
            <TextField fx:id="serverAddressField" alignment="CENTER" prefHeight="10.0" prefWidth="186.0"
                       promptText="127.0.0.1"/>
            <Label text="Server port:"/>
            <TextField fx:id="serverPortField" alignment="CENTER" prefHeight="10.0" prefWidth="186.0"
                       promptText="16847"/>
         </children>
      </VBox>
   </center>
</BorderPane>
